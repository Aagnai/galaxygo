    let Couponcode = document.getElementById("couponInput").value;

  console.log(CouponCode, "veryfy payment");
  function verifyPayment(payment, razorpayOrderData) {
    console.log(razorpayOrderData, "orderrrrrrrrrrrrrrrrrrr dataaaaaaaaa");

    $.ajax({
      url: "/verifyPayment",
      data: {
        payment,
        razorpayOrderData,
        userOrderData,
        CouponCode,
        walletBalance,
      },
      method: "post",

      success: (response) => {
        if (response.status) {
          Swal.fire({
            title: "Order Placed Successfully",
            icon: "success",
            showDenyButton: false,
            confirmButtonText: "View Order",
            denyButtonText: `Continue Shopping`,
            toast: true,
          }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
              location.href = "/order-complete";
            } else if (result.isDenied) {
              location.href = "/";
            }
          });
        }
      },
    });
  }

  function paymentFailed(response) {
    $.ajax({
      url: "/paymentFailed",
      data: response,
      method: "post",
      success: (response) => {
        if (response.status) {
          Swal.fire({
            title: "Payment Failed !",
            icon: "error",
            showDenyButton: false,
            toast: true,
          }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
              location.href = "/";
            } else if (result.isDenied) {
              location.href = "/";
            }
          });
        }
      },
    });
  }
</script>
