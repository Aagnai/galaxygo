<%- include('../admin/partials/adminheader.ejs') %>

<main class="h-full pb-16 overflow-y-auto">
  <div class="container px-6 mt-8 mx-auto grid">
    <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">
      <!-- General elements -->
      <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300">
        Add Coupon
      </h4>
      <div
        class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800"
      >
        <form action="/admin/coupon" method="post">
          <% if(addCouponErr.length>0){ %>
          <div
            class="alert alert-danger col-md-12 text-center"
            style="color: white; background-color: rgb(221, 118, 118)"
            role="alert"
          >
            <p class="text-danger"><%= addCouponErr %></p>
          </div>
          <% } else if (couponExistErr.length>0) { %>
          <div
            class="alert alert-danger col-md-12 text-center"
            style="color: white; background-color: rgb(221, 118, 118)"
            role="alert"
          >
            <p class="text-danger"><%= couponExistErr %></p>
          </div>
          <% } %>
          <label class="block text-sm">
            <span class="text-gray-700 dark:text-gray-400">Coupon Code</span>
            <input
              class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
              name="code"
              type="text"
            />
          </label>
          <!-- cut off -->

          <label class="block mt-4">
            <span class="text-gray-700 dark:text-gray-400"
              >Coupen type</span
            ></label
          >
          <div class="mt-3 text-sm">
            <label class="form-label mt-4" style="color: white" for="">
              <span class="text-gray-700 dark:text-gray-400"> Percentage</span>
              <input
                onclick="changeType('Percentage')"
                class="me-2"
                id="type"
                name="CouponType"
                type="radio"
                value="Percentage"
                checked /></label
            ><br />
            <label class="form-label" style="color: white" for=""
              ><span class="text-gray-700 dark:text-gray-400">Amount</span>
              <input
                onclick="changeType('Amount')"
                class="me-2"
                id="type"
                name="CouponType"
                type="radio"
                value="Amount"
            /></label>
          </div>

          <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400" id="typePercentage"
              >CUT-OFF Percentage</span
            >
            <span
              class="text-gray-700 dark:text-gray-400"
              id="typeAmount"
              hidden
              >CUT-OFF Amount</span
            >
          </label>
          <input
            class="block w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
            name="cutOff"
            type="number"
          />

          <!-- cut off end -->
          <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400"
              >Min. Amount of Cart</span
            >
          </label>
          <input
            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
            name="minAmount"
            type="number"
          />

          <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400"
              >Max. Redeem Amount</span
            >
            <input
              class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
              name="maxAmount"
              type="number"
            />
          </label>

          <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400"
              >No. of coupons to genetate</span
            >
            <input
              class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
              name="genetateCount"
              type="number"
            />
          </label>
          <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400">valid upto</span>
            <input
              class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
              name="expireDate"
              type="date"
            />
          </label>

          <button
            type="submit"
            class="btn btn-primary btn-ls btn-block login-button"
          >
            <a
              class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
            >
              Add Coupon
            </a>
          </button>
        </form>
      </div>
    </div>
  </div>
</main>

<script>
  function changeType(type) {
    if (type == "Amount") {
      document.getElementById("typeAmount").hidden = false;
      document.getElementById("typePercentage").hidden = true;
    } else if (type == "Percentage") {
      document.getElementById("typeAmount").hidden = true;
      document.getElementById("typePercentage").hidden = false;
    }
  }
</script>
